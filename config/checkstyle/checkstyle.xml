<!DOCTYPE module PUBLIC
        "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
        "https://checkstyle.org/dtds/configuration_1_3.dtd">
<module name="Checker">

    <!-- Проверка длины строк -->
    <module name="LineLength">
        <property name="max" value="120"/>
    </module>

    <!-- TreeWalker обрабатывает синтаксическое дерево кода -->
    <module name="TreeWalker">

        <!-- Проверка пустых блоков -->
        <module name="EmptyBlock"/>

        <!-- Проверка порядка импортов -->
        <module name="ImportOrder">
            <!-- Группы: стандартные пакеты сначала, все остальные вместе -->
            <property name="groups" value="java, javax, *"/>

            <!-- Импорты внутри группы упорядочиваются по алфавиту -->
            <property name="ordered" value="false"/>

            <!-- Не добавляем пустые строки между группами -->
            <property name="separated" value="false"/>

            <!-- Отправляем все статические импорты в конец -->
            <property name="option" value="bottom"/>
        </module>


        <!-- Проверка отсутствия пустых catch блоков -->
        <module name="AvoidInlineConditionals"/>

    </module>
</module>
